{
  "manifest_version": 3,
  "name": "Voting Locations Helper",
  "version": "1.0.0",
  "description": "Restyle voting locations and find the three closest to your address.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://nominatim.openstreetmap.org/*",
    "https://*/*",
    "http://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
